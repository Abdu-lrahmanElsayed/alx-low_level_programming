.PHONY: all clean oclean fclean re test
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(SRC:.c=.o)
	${CC} $(SRC:.c=.o) -o ${NAME}
clean:
	${RM} -f *~ ${NAME}
oclean:
	${RM} -f *~ $(SRC:.c=.o)
fclean: clean oclean
re: oclean all
test:
	if [ -e m.h ]; then
		false
	fi
